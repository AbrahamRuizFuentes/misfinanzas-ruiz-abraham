

<div class="col-auto p-5 text-center">
<p id="notice"><%= notice %></p>

<h1>Ingresos</h1>

<table>
  <thead>
    <tr>
      <th>Fecha</th>
      <th>monto</th>
      <th>Categoria</th>
      <th>Glosa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @incomes.each do |income| %>
      <tr>
        <td><%= income.date %></td>
        <td><%= income.amount %></td>
        <td><%= income.category %></td>
        <td><%= income.glosa %></td>
        <td><%= link_to 'Show', income %></td>
        <td><%= link_to 'Edit', edit_income_path(income) %></td>
        <td><%= link_to 'Destroy', income, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Ingreso nuevo', new_income_path %> <br><br>

<%= link_to "Salir", :back %>
</div>
